# ShortTermEmail.com Backend Configuration
# Copy this file to .env and update the values

# Domain Configuration
DOMAIN=shorttermemail.com
PROTOCOL=https
EMAIL_DOMAIN=shorttermemail.com

# Server Configuration
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400

# SMTP Configuration
SMTP_PORT=25
SMTP_HOST=0.0.0.0

# Email Settings
MAX_EMAILS_PER_ADDRESS=50
EMAIL_EXPIRY_HOURS=24
MAX_EMAIL_SIZE=1048576

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
EMAIL_GEN_WINDOW_MS=60000
EMAIL_GEN_MAX_REQUESTS=10

# Additional Configuration
ALLOWED_DOMAINS=shorttermemail.com,mail.shorttermemail.com
